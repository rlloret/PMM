<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/campoFoto"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="campoApellido"
        android:id="@+id/campoApellido"
        android:layout_toEndOf="@+id/campoFoto"
        android:layout_alignTop="@+id/campoFoto"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="campoNombre"
        android:id="@+id/campoNombre"
        android:layout_toEndOf="@+id/campoApellido"
        android:layout_alignTop="@+id/campoApellido"/>


</RelativeLayout>